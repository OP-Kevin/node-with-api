<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-user-plus"></i> Update Employee</h4>
            </div>
            <div class="card-body">
                <form action="/update_emp" method="post">
                    <input type="hidden" name="txtH1" value="<%= emp_data._id %>">
                    <!-- Employee ID -->
                    <div class="mb-3">
                        <label for="empId" class="form-label">Employee ID</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                            <input type="text" class="form-control" name="empId" placeholder="Enter Employee ID" value="<%= emp_data.eid %>">
                        </div>
                    </div>

                    <!-- Name -->
                    <div class="mb-3">
                        <label for="empName" class="form-label">Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="text" class="form-control" value="<%= emp_data.ename %>" name="empName" placeholder="Enter Name">
                        </div>
                    </div>

                    <!-- Age -->
                    <div class="mb-3">
                        <label for="empAge" class="form-label">Age</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input type="number" class="form-control" name="empAge" value="<%= emp_data.age %>" placeholder="Enter Age">
                        </div>
                    </div>

                    <!-- City -->
                    <div class="mb-3">
                        <label for="empCity" class="form-label">City</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-city"></i></span>
                            <input type="text" class="form-control" name="empCity" value="<%= emp_data.city %>" placeholder="Enter City">
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-save"></i> Update
                        Employee</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>